<!--Xpath code for traders.xml for AlwaysOpenTraders--> 

<configs>

	<!-- Set traders to close at 22:00 and open at 4am -->
	<set xpath="//trader_info[@close_time='21:50']/@open_time">04:00</set>
	<set xpath="//trader_info[@close_time='21:50']/@close_time">22:00</set>

	<!-- Set more trader inventory, defaults: min 30, max 70 
	<set xpath="//trader_info/@min_inventory">80</set>
	<set xpath="//trader_info/@max_inventory">160</set> -->

	<!-- Set trader to swap out more stuff on reset 
	<set xpath="//trader_info/@min_items_swapped">80</set>
	<set xpath="//trader_info/@max_items_swapped">160</set> -->

	<!--Change trader interval of resetting, def 3-->
	<set xpath="//trader_info/@reset_interval">4</set>
	
	<!-- Change random vending machines to sell?? -->
	<set xpath="//trader_info[@id='4']/@allow_sell">true</set>

